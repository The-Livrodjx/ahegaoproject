<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/navbar.css">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/footer.css">
        <link rel="stylesheet" href="/css/style.css">

        <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon">
        <title>Assistir - <%= media.title %></title>
    </head>
    <body>
        
        <%- include("./partials/navbar.ejs")%>
       
        <section class="watch-section">
            <div class="watch-content">

               <div class="main-container">
                    <h1><%= media.title %></h1>
                    <p class="tags"><a href="<%= media.category.title %>" style="text-decoration: none; background-color: gray; color: #222; padding: 0 5px; border-radius: 3px;"><%= title %></a></p>
                    <video class="video-content" width="920" height="520" controls autoplay>
                        <source src="<%= media.path %>" type="video/mp4">
                    
                        Your browser does not support the video tag.
                    </video>
               </div>

               <div class="relation">

                <h2 style="margin-bottom: 20px;">VÃ­deos relacionados: </h2>

                <div class="cards">
                    <% medias.forEach(mediaContent => { %>

                        <div class="card">
                            <div class="card">
                                <video class="preview" ontimeupdate="getVideoDuration(this, '<%= mediaContent.slug %>') "width="150px" height="150px" src="<%= mediaContent.path %>"></video>
                                <h2><%= mediaContent.title %></h2>
                                    
                                <p class="<%= mediaContent.slug %>" id="<%= mediaContent.slug %>"></p>
                                
                                <a href="/profile/<%= mediaContent.user.name %>" style="color: #222"><%= mediaContent.user.name %></a>
                                <a href="/watch?id=<%= mediaContent.id %>" class="button-secondary pure-button">Assistir</a>
                            </div>
                           
                        </div>
                    <% }) %>
                </div>
            </div>
            </div>

        </section>
        <script src="/js/toogle.js"></script>
        <%- include("./partials/footer.ejs") %>
    </body>
</html>